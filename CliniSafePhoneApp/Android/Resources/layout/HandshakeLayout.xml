<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/handshake_linear_layout">

    <ImageView
        android:id="@+id/handshake_logo_image_view"
        android:src="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="100.0dp"
        android:layout_marginBottom="0.0dp"/>

    <TextView
        android:id="@+id/handshake_loading_text"
        android:text="Loading..."
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="168.5dp"
        android:layout_marginRight="115.5dp"
        android:layout_marginTop="27.5dp"
        android:layout_marginBottom="40.0dp"
        android:height="60dp"
        android:width ="100dp"
        android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
        android:textColor="@android:color/black" />


    <ProgressBar
        android:id="@+id/handshake_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="40.0dp"
        android:textAlignment="center"
        android:layout_marginTop="20.0dp"/>
</LinearLayout>
   