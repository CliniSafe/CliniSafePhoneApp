<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CliniSafePhoneApp.Portable"
             x:Class="CliniSafePhoneApp.Portable.Views.ErrorPage" Title="Error" NavigationPage.HasBackButton="True" >

    <StackLayout x:Name="ErrorContainerStackLayout">
        <Image x:Name="cliniSafeImage" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" HeightRequest="80" WidthRequest="200" />

        <Label x:Name="ErrorLabel" Text="{Binding Message, Mode=OneWay}"  HorizontalTextAlignment="Start" HorizontalOptions="CenterAndExpand" Margin="40,0,40,0"
           VerticalOptions="CenterAndExpand" />

        <Button x:Name="LoginNavigationButton" Text="Close" VerticalOptions="CenterAndExpand" Margin="40,10,200,200" TextColor="{StaticResource whiteColor}"
              Command="{Binding NavigateToLoginCommand}" BackgroundColor="{StaticResource blueColor}"></Button>

        <Button x:Name="TempTestNavigationButton" Text="Navigate To Temp Test" VerticalOptions="CenterAndExpand" Margin="40,10,200,200" TextColor="{StaticResource whiteColor}"
              Command="{Binding NavigateToTempTestCommand}" BackgroundColor="{StaticResource blueColor}"></Button>        
    </StackLayout>
</ContentPage>
